<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="4000"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/ivWelcomeColorWheel"
               motion:framePosition="0"
               android:scaleX="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/ivWelcomeColorWheel"
               motion:framePosition="0"
               android:scaleY="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/ivWelcomeColorWheel"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/ivWelcomeColorWheel"
               motion:framePosition="0"
               android:rotation="360" />
           <KeyAttribute
               motion:motionTarget="@+id/ivWelcomeColorWheel"
               motion:framePosition="40"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/ivWelcomeCharacter"
               motion:framePosition="0"
               android:scaleY="0" />
           <KeyAttribute
               motion:motionTarget="@+id/ivWelcomeCharacter"
               motion:framePosition="0"
               android:scaleX="0" />
           <KeyAttribute
               motion:motionTarget="@+id/ivWelcomeCharacter"
               motion:framePosition="40"
               android:scaleX="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/ivWelcomeCharacter"
               motion:framePosition="40"
               android:scaleY="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/ivWelcomeCharacter"
               motion:framePosition="60"
               android:scaleX="1" />
           <KeyAttribute
               motion:motionTarget="@+id/ivWelcomeCharacter"
               motion:framePosition="60"
               android:scaleY="1" />
           <KeyAttribute
               motion:motionTarget="@+id/tvGameName"
               motion:framePosition="25"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/tvGameName"
               motion:framePosition="60"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/tvGameName"
               motion:framePosition="0"
               android:alpha="0" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end"></ConstraintSet>
</MotionScene>