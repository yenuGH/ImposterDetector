<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="350dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivImposterEjected"
                android:layout_width="265dp"
                android:layout_height="160dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.060000002"
                app:srcCompat="@drawable/imposter_found_and_kicked" />

            <TextView
                android:id="@+id/tvCongratulations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/congrats_text"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="@+id/ivImposterEjected"
                app:layout_constraintStart_toStartOf="@+id/ivImposterEjected"
                app:layout_constraintTop_toBottomOf="@+id/ivImposterEjected" />

            <Button
                android:id="@+id/btnExitGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/return_to_menu_text"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/tvCongratulations"
                app:layout_constraintStart_toStartOf="@+id/tvCongratulations"
                app:layout_constraintTop_toBottomOf="@+id/tvCongratulations" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>