<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainMenuActivity">

    <ImageView
        android:id="@+id/ivMenuBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_main_menu" />

    <ImageButton
        android:id="@+id/ibPlayButton"
        android:layout_width="410dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivMenuBackground"
        app:srcCompat="@drawable/button_play" />

    <ImageButton
        android:id="@+id/ibHelpButton"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ibPlayButton"
        app:layout_constraintTop_toBottomOf="@+id/ibPlayButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/button_help" />

    <ImageButton
        android:id="@+id/ibOptionsButton"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibHelpButton"
        app:layout_constraintTop_toBottomOf="@+id/ibPlayButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/button_options" />
</androidx.constraintlayout.widget.ConstraintLayout>